{
  "name": "uoc-boilerplate",
  "version": "3.6.0",
  "private": true,
  "description": "Boilerplate for Advanced HTML/CSS Tools UOC students",
  "scripts": {
    "parcel:serve": "parcel src/index.html -p 7000",
    "parcel:build": "parcel build src/index.html --target web --no-source-maps --no-cache",
    "clean": "rimraf dist .cache .cache-loader .parcel-cache",
    "dev": "npm-run-all clean parcel:serve",
    "build": "npm-run-all clean parcel:build",
    "stylelint": "stylelint src/**/*.scss",
    "test": "echo 'Everything is working as expected âœ…\nStart working on your project by running \\033[1mnpm run dev\\033[0m'"
  },
  "web": "dist/index.html",
  "targets": {
    "web": {
      "context": "browser",
      "publicUrl": "./",
      "engines": {
        "browsers": "last 2 versions, > 0.5%, not dead"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uoc-advanced-html-css/uoc-boilerplate.git"
  },
  "author": {
    "name": "Jordi Tarrida",
    "email": "jorditarrida@uoc.edu"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/uoc-advanced-html-css/uoc-boilerplate/issues"
  },
  "homepage": "https://github.com/uoc-advanced-html-css/uoc-boilerplate#readme",
  "devDependencies": {
    "@parcel/transformer-sass": "^2.8.3",
    "autoprefixer": "^10.4.13",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.8.3",
    "postcss-preset-env": "^7.8.3",
    "posthtml-include": "^1.7.4",
    "punycode": "^1.4.1",
    "rimraf": "^3.0.2",
    "sharp": "0.31.1",
    "stylelint": "^15.5.0"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.7",
    "@zkreations/imagehover": "^1.1.0",
    "bootstrap": "^5.2.3",
    "bootstrap-icons": "^1.10.4",
    "bootstrap-sass": "^3.4.3",
    "bootstrap-scss": "^5.2.3",
    "i18next": "^22.4.15",
    "marked": "^4.3.0",
    "stylelint-scss": "^4.6.0",
    "zero-md": "^2.4.0"
  }
}
